		//Lab 02 specific methods goes inside switch
		switch (op) {
		case 1:
			//int size = stringLength(input);
			break;
		case 2:

			break;
		case 3:

			break;
		case 4:

			break;
		}
		delete [] input;
	} while (again());
	//system("pause");
