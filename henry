string promptstr(string msg) {
	string str;
	cout << msg << endl;
	cin >> str;
	return str;
}

string promptstr(string msg, int num) {
	string str;
	cout << msg << num << endl;
	cin >> str;
	return str;
}

int promptint(string msg) {
	int num;
	cout << msg << endl;
	cin >> num;
	return num;
}
